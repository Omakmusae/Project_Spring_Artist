<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kafka.springboot.sys.login.LoginMapper">
    
    <select id="getIdcnt" parameterType="User" resultType="int">
        SELECT count(*) FROM user where user_id= #{user_id}
    </select>

    <select id="getUserbyid" parameterType="User" resultType="User">
        SELECT * FROM user where user_id= #{user_id}
    </select>

    <select id="getEmailcnt" parameterType="User" resultType="int">
        SELECT count(*) FROM user where email = #{email}
    </select>

    <insert id="insertuser" parameterType="User">
        INSERT INTO `user`(`id`,`name`,`user_id`,`pw`,`email`) VALUES (get_seq('userSeq'),#{name},#{user_id},#{pw},#{email})
    </insert>


</mapper>